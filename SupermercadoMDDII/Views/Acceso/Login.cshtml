@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="c:\users\kenne\videos\supermercadomddii\supermercadomddii\wwwroot\css\stylesheet.css" rel="stylesheet" />
    <style>
        /* CSS personalizado para cambiar el color de fondo a azul */
        body {
            background-color: #4c30ba; /* Azul */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        #login-box {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div id="login-box">
        <h3 class="text-center text-info">Sistema Integral Supermercado</h3>
        <div class="container">
            <form id="login-form" class="form" action="@Url.Action("Login","Acceso")" method="post">
                <div class="form-group">
                    <label for="username" class="text-info">Correo:</label><br>
                    <input type="text" name="correo" id="username" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password" class="text-info">Contraseña:</label><br>
                    <input type="password" name="clave" id="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                </div>
                <div id="register-link" class="text-right">
                    <a href="@Url.Action("Registrar","Acceso")" class="text-info">Registrarse</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
