<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Editar Categoria</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
            </div>

        </div>
        <hr />

        <div class="row">
            <div class="col-sm-12">
                <div>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="Idcategoria" />
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-row">
                                    <div class="form-group col-sm-4">
                                        <span asp-validation-for="descripcion" class="text-danger"></span>
                                        <label asp-for="descripcion" class="control-label">Nueva descripción</label>
                                        <input class="form-control" asp-for="descripcion" type="text"/>
                                    </div>
                                    
                                    <div class="col-sm-3">
                                        <div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div>
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div>
                                        </div>
                                    </div>

                                    <div class="col-sm-1">
                                        <div>
                                            <input type="submit" value="Grabar" />

                                        </div>
                                    </div>

                                    <div class="col-sm-1">
                                        <form asp-action="Index">
                                            <button class="btn btn-danger btn-sm" type="submit">Cancelar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>



                        
                    </form>
                    
                </div>

            </div>
        </div>
    </div>
